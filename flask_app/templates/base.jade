doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title= pageTitle
		link(rel='short icon', href=url_for('static', filename='favicon.ico'))
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
		link(rel='stylesheet', href=url_for('static', filename='css/home.css'))
		block stylesheets
		block head
	body
		.container_fluid
			.row
				.col-sm-3.col-md-2.col-lg-2.sidebar
					h3
						a(href=url_for('main.main_page')) Home
					ul.nav.nav-sidebar
						li
							a(href=url_for('main.features')) Current Feature Requests
				section.col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-2.col-lg-10.col-lg-offset-2.main
					.row
						.col-md-4
							- var messages = get_flashed_messages(with_categories=true)
							if messages
								ul.flahes.list-group
									for category, message in messages
										li.list-group-item(class=category)= message
					block main
		script(src='//code.jquery.com/jquery-2.2.1.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js')
		block scripts
